<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="?android:attr/windowBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Estado de conexi贸n -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text=" Esperando conexi贸n BLE..."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary" />

    <!-- Bot贸n de escaneo -->
    <Button
        android:id="@+id/scanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingVertical="12dp"
        android:text=" Buscar dispositivo BLE"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <!-- Bot贸n de conexi贸n -->
    <Button
        android:id="@+id/connectButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:enabled="false"
        android:paddingVertical="12dp"
        android:text=" Conectar al dispositivo"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <!-- rea de datos -->
    <GridLayout
        android:id="@+id/sensorGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:useDefaultMargins="true"
        android:layout_marginTop="16dp">

        <!-- GASES -->
        <TextView
            android:id="@+id/gasCO"
            style="@style/GasCard"
            android:text="CO\n0.00 ppm" />

        <TextView
            android:id="@+id/gasNO2"
            style="@style/GasCard"
            android:text="NO\n0.00 ppm" />

        <TextView
            android:id="@+id/gasNH3"
            style="@style/GasCard"
            android:text="NH\n0.00 ppm" />

        <TextView
            android:id="@+id/gasCH4"
            style="@style/GasCard"
            android:text="CH\n0.00 ppm" />

        <TextView
            android:id="@+id/gasETOH"
            style="@style/GasCard"
            android:text="CHOH\n0.00 ppm" />

        <!-- AMBIENTALES -->
        <TextView
            android:id="@+id/cardTemp"
            style="@style/GasCard"
            android:text=" Temp\n0.0 掳C" />

        <TextView
            android:id="@+id/cardHum"
            style="@style/GasCard"
            android:text=" Hum\n0.0 %" />

        <TextView
            android:id="@+id/cardSound"
            style="@style/GasCard"
            android:text=" Sound\n0" />

    </GridLayout>


    <!-- Botones de Historial y Estad铆sticas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:padding="16dp"
            android:text="HISTORY"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnStatistics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:padding="16dp"
            android:text="STATS"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnLocalStatistics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:padding="16dp"
            android:text="LOCAL"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#CDFF5722"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>
